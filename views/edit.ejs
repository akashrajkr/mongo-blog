<%include partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form action="/blogs/<%=blog._id%>?_method=PUT" method="post" class="ui form">
        <div class="field">
            <label>Title of the Blog</label>
            <input type="text" name="title" placeholder="Title" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="image" placeholder="Image URL" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea style="margin-top: 0px; margin-bottom: 0px; height: 112px;" name="body"><%=blog.body%></textarea>
        </div>
        <button class="ui violet big basic button" type="submit">Save Changes</button>
    </form>
</div>
<%include partials/footer%>