<%include partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" method="post" class="ui form">
        <div class="field">
            <label>Title of the Blog</label>
            <input type="text" name="title" placeholder="Title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="image" placeholder="Image URL">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea style="margin-top: 0px; margin-bottom: 0px; height: 112px;" name="body"></textarea>
        </div>
        <button class="ui violet big basic button" type="submit">Submit</button>
    </form>
</div>
<%include partials/footer%>